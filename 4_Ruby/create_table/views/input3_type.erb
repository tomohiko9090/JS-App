<%  names = params[:name] 
    strengths = params[:strength]
%>

<h1>ステップ3</h1>
<h3>表の作り方を選んで下さい。</h3>
<br>
<form action="/table" method="post">
    <div class="form-check">
      <input class="form-check-input" type="radio" name="table_type" id="equally" value="equally" checked>
      <label class="form-check-label" for="flexRadioDefault1">
        1. 強さを均等にして表を作る
      </label>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="table_type" id="level" value="level">
      <label class="form-check-label" for="flexRadioDefault2">
        2. レベル別に表を作る
      </label>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="table_type" id="random" value="random">
      <label class="form-check-label" for="flexRadioDefault3">
        3. ランダムに表を作る
    </label>
    </div>
    
    <br>
    <a href="/input2_strength" class="btn btn-outline-warning">ステップ2に戻る</a>

    <% names.each do |name|%>
    <input type="hidden" name="name[]" value="<%= ERB::Util.html_escape(name) %>">
    <% end %>  

    <% strengths.each do |strength|%>
    <input type="hidden" name="strength[]" value="<%= ERB::Util.html_escape(strength) %>">
    <% end %>  

    <button type="submit" class="btn btn-outline-success">表を作る！</button>
</form>